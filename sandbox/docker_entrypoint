#!/usr/bin/env bash

folder_name=$1
tester_name=$2
solution_name=$3
test_name=$4

uid=$(( ( RANDOM )  + 10000 ))

#echo "127.0.0.1 $(hostname)" >> /etc/hosts

groupadd code
useradd -u "$uid" -G code -d "/home/codecube" -m codecube 

chgrp code $folder_name
chmod -R 0775 $folder_name
chmod a+x /run_test_no_sandbox

cd $folder_name
sudo -u codecube /run_test_no_sandbox $2 $3 "$4"